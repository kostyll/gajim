if test $(id -u) -eq 0; then
	echo "You must not launch Gajim as root, it is INSECURE"
	exit 1
fi

export datadir=@DATADIR@/gajim
PYTHON_EXEC=@PYTHON@

cd ${datadir}/src
export PYTHONPATH="$PYTHONPATH:@LIBDIR@/gajim"
exec ${PYTHON_EXEC} -OO history_manager.py $@
